<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4b494c"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hanish.health_on_the_go.Splash_activity">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="20dp"
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:cardElevation="40dp"
        app:cardCornerRadius="500dp"
        app:cardBackgroundColor="#4b494c"
        android:layout_gravity="center"
        >
    <VideoView
        android:id="@+id/vvsplash"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="0.54"

        />
    </android.support.v7.widget.CardView>



    <ImageView
        android:id="@+id/ivLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp"
        app:srcCompat="@drawable/sliding_square_loader_view"/>

    <TextView
        android:text="Health on the Go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="282dp"
        android:textSize="40dp"
        android:id="@+id/tvappname"/>

</RelativeLayout>
