<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c2c2c2">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/activity_tips"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#c2c2c2"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:weightSum="1"

                    tools:context="com.example.hanish.health_on_the_go.TipsActivity">

        <android.support.v7.widget.CardView
            android:id="@+id/cvTipbg"
            android:layout_width="150dp"
            android:layout_height="433dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cvTip3"

            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_weight="0.26"
            app:cardBackgroundColor="@color/background_color"
            app:cardElevation="20sp">

            <TextView
                android:id="@+id/tvTip2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:drawableTop="@drawable/ic_lens_black_24dp"
                android:fontFamily="cursive"
                android:gravity="top"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvTip2"
            android:layout_width="180dp"
            android:layout_height="206dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="28dp"
            app:cardBackgroundColor="@color/yellow"
            app:cardElevation="20sp">

            <TextView
                android:id="@+id/tvTip4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:drawableTop="@drawable/ic_lens_black_24dp"
                android:fontFamily="cursive"
                android:gravity="top"
                android:textSize="25dp"
                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvTip4"
            android:layout_width="180dp"
            android:layout_height="200dp"

            android:layout_alignParentEnd="true"

            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            app:cardBackgroundColor="@color/colorAccent"
            app:cardElevation="20sp">

            <TextView
                android:id="@+id/tvTip3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:drawableTop="@drawable/ic_lens_black_24dp"
                android:fontFamily="cursive"
                android:gravity="top"
                android:textSize="25dp"
                android:textStyle="bold"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cvTip3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            app:cardBackgroundColor="@color/aquablue"
            app:cardElevation="50sp">

            <TextView
                android:id="@+id/tvTip1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:drawableTop="@drawable/ic_lens_black_24dp"
                android:fontFamily="cursive"
                android:gravity="top"
                android:textSize="25dp"

                android:textStyle="bold"/>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>